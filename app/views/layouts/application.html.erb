<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <title>TeamMaker</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "customer" %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<% if user_signed_in? %>

<body>
    <% else %>
    <% if !current_page?(root_path) %>

    <body class="features-blue">
        <% end %>
        <% end %>

        <% if (!user_signed_in? && current_page?(root_path)) || user_signed_in?%>
        <header>
            <%= render :partial => "layouts/shared/navbar" %>
        </header>
        <% end %>


        <% if notice %>
        <script type="text/javascript">
            Materialize.toast('<%= notice %>', 5000, 'green')
        </script>
        </div>
        <%elsif alert %>
        <script type="text/javascript">
            Materialize.toast('<%= alert %>', 5000, 'red')
        </script>
        </div>
        <% end %>
        <% if user_signed_in? && current_user.rol == 0 && !current_page?(root_path) && !current_page?(usuarios_path) %>
            <main style="background-color:#f1f1f1"> </main>
        <% else %>
            <main>
                <% end %>
                <%= yield %>
            </main>

            <% if (!user_signed_in? && current_page?(root_path)) || user_signed_in?%>
            <footer class="page-footer" style="background-color: #2196F3">
                <%= render :partial => "layouts/shared/footer" %>
            </footer>
            <% end %>
            <%= javascript_include_tag 'init' %>
            <%= javascript_include_tag "materialize" %>

            <%= javascript_include_tag 'chart' %>
    </body>

</html>
