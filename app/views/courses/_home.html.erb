<div class="container">
    <h1 class="center-align"><strong class="bold">¡Bienvenido estudiante!</strong></h1>
    <div class="row">
        <h5 class="center-align">Estado de los tests:</h5>
            <div class="col l6 m6 s6 center-align">
                <% class1 = @psycho_test_answered ? "green" : "red" %>
                <div class="card <%= class1 %> white-text">
                    <div class='card-content'>
                        <span class='card-title'>Test de personalidad</span>
                        <p>Estado: <%= @psycho_test_answered ? "Respondido" : "Pendiente" %></p>
                    </div>
                    <% if !@psycho_test_answered %>
                        <div class="card-action">
                            <%= link_to 'Ir al test',test_eneagrama_path %>
                        </div>
                    <% end %>
                </div>
            </div>
        <% class1 = @social_test_answered ? "green" : "red" %>
        <div class="col l6 m6 s6 center-align">
            <div class="card <%= class1 %> white-text">
                <div class='card-content'>
                    <span class='card-title'>Test de afinidad social</span>
                    <p>Estado: <%= @social_test_answered ? "Respondido" : "Pendiente" %> </p>
                </div>
                <% if !@social_test_answered %>
                    <div class="card-action">
                        <%= link_to 'Ir al test',test_social_path %>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="col l12 m12 s12 center-align">
                <% if !current_user.group.present? %>
                    <% if @social_test_answered && @psycho_test_answered %>
                        <span class="light">¡Ya has respondido! Ahora sólo debes esperar a que se conformen los grupos.</span>
                    <% else %>
                        <span class="light">Responde los test pendientes para que se puedan conformar los grupos en el/los curso(s) pendientes</span>
                        <% end %>
                <% else %>
                    <span class="light">¡Tu equipo ya fue conformado! (<%= link_to 'Ir a ver',mi_equipo_path %>)</span>
                <% end %>
        </div>
    </div>
</div>