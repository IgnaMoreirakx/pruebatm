                    <% @subjects.each do |subject| %>
                    <option value="<%= subject.id %>" ><%= subject.name %></option>
                        <% end %>
            </select>
        </div> 
    </div>-->
</div>
<div class="modal-footer">
      <!--     <a class=" modal-action modal-close waves-effect btn left red">Volver</a> </div> -->
        <%= s.submit 'Crear curso', :class  => "btn left" %>
        <% end %>
    </div>

