<div style="padding-top:5%">
    <div class="container">
        <div class="row">
            <div class="col l12 m12 s12 center-align" style="padding-bottom: 14px">
                <h2 style="display: inline"><b>Panel de cursos</b></h2>
                <hr style="height: 5px;background-color: #2196F3;border-color: transparent !important;">
            </div>
            <% current_user.courses.each do |course| %>
            <div class="col s12 m6 l4" style="padding-top:20px" align="center">
                <%= link_to '<i class="material-icons" style="font-size: 5rem;padding-top:40px">school</i><h4 class="center" style="margin:0;font-size: 1.4rem;">'.html_safe + course.code + '</h4>'.html_safe,"curso/" + course.id.to_s { |n|  }, class: "btn btn-default waves-effect waves-light features" , style: "height:200px; width:100%; background-color: #5EBD81" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
</div>
